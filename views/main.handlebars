<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaisei+HarunoUmi:wght@400;500;700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/2714787ef1.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="captain1">
        <div class="main">
            <header>
                <!-- <img src="/images/bmu logo.png" alt="bmu-logo"> -->
                <a href="/" style="padding-left: 30px;">
                    <div class="captain1-content">
                        <h2>{{content}}</h2>
                        <h2>{{content}}</h2>
                    </div>
                </a>
                <nav>
                    <a href="/">Home</a>
                    <a href="#about">About</a>
                    <a href="#contact">Contact</a>
                </nav>
                <a href="/login"><button>Login</button></a>
            </header>
            <main>
                <div class="left">
                    <div class="upper">
                        <div class="text">
                            <p>{{messageone}}</p>
                            <p>{{messagetwo}}</p>
                            <p>{{messagethree}}</p> 
                        </div>
                    </div>
                    <div class="mid">
                        <a href="/register"><button>Start Voting</button></a>
                    </div>
                    <div class="lower">
                        <p class="follow">follow us</p>
                        <div class="icons" style="margin-top: 5px; width: 30%;">
                            <a href="#" style="color: #455EEF;">
                                <i class='bx bxl-instagram'></i>
                            </a>
                            <a href="#" style="color: #455EEF;">
                                <i class='bx bxl-facebook' ></i>
                            </a>
                            <a href="#" style="color: #455EEF;">
                                <i class='bx bxl-twitter' ></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <div class="image"></div>
                </div>
            </main>
        </div>
    </div>
  
    <div class="captain3">
        <h1 class="section-title">{{section_title}}</h1>
        <p class="upper-para">{{upper_para}}</p>
        <div class="container">
           {{#each features}}
        <div class="card" style="--clr:#c6d1ea;" data-tilt data-tilt-glare>
            <div class="content">
                <img src="{{icon}}" alt="{{title}} icon">
                <h2>{{title}}</h2>
                <p>{{{description}}}</p>
            </div>
        </div>
        {{/each}}
        </div>
    
        <script>
            let cards = document.querySelectorAll('.card');
            cards.forEach(card =>{
                card.onmousemove = function(e){
                    let x = e.pageX - card.offsetLeft;
                    let y = e.pageY - card.offsetTop;
    
                    card.style.setProperty('--x', x + 'px')
                    card.style.setProperty('--y', y + 'px')
                }
            })
        </script>
    </div>
     <div class="captain2" id="about">
        <div class="left">
            <img src="/images/aboutpageimg.png" alt="About image">
        </div>
        <div class="right">
            <section class="text">
                {{#each about.title}}
                    <h1 class="section-title">{{this}}</h1>
                {{/each}}
                <p>{{about.description}}</p>
                <div class="icons">
                    {{#each about.socialLinks}}
                        <a href="{{this.href}}" style="color: #455EEF;">
                            <i class="{{this.icon}}"></i>
                        </a>
                    {{/each}}
                </div>
            </section>
        </div>
    </div>

    <div class="captain4" id="contact">
        <div class="left">
            {{#each contact.heading}}
                <h1>{{this}}</h1>
            {{/each}}
            <p>{{contact.description}}</p>
        </div>
        <div class="right">
            <div class="all-text">
                <h4>{{contact.address.country}}</h4>
                <div class="first">
                    <i class="fa-solid fa-location-dot"></i>
                    <p>{{contact.address.location}}</p>
                </div>
                <div class="first">
                    <i class="fa-solid fa-envelope"></i>
                    <p>{{contact.address.email}}</p>
                </div>
                <div class="first">
                    <i class="fa-solid fa-phone"></i>
                    <p>{{contact.address.phone}}</p>
                </div>
            </div>
        </div>
    </div>
  
</body>
</html>